<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_row_main_activity_parent_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_5dp"
    card_view:cardCornerRadius="@dimen/spacing_5dp"
    card_view:elevation="@dimen/spacing_5dp">

    <TextView
        android:id="@+id/list_row_main_activity_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:padding="@dimen/spacing_10dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="@dimen/spacing_15dp"
        android:layout_height="@dimen/spacing_15dp"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="@dimen/spacing_10dp"
        android:layout_marginRight="@dimen/spacing_10dp"
        android:scaleType="centerInside"
        android:src="@drawable/arrow_1"
        android:tint="@android:color/white" />

</android.support.v7.widget.CardView>